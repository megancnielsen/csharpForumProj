@model LoginUser;

<h3 class="text-center">Login</h3>
</ hr>

<form asp-action="Register" asp-controller="Home">
    <div class="form-group">
        <label asp-for="LoginEmail"></label>
        <span
            class="test-danger font-weight-bold"
            asp-validation-for="LoginEmail"></span>
        <input class="form-control" asp-for="LoginEmail" />
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <span
            class="test-danger font-weight-bold"
            asp-validation-for="LoginPassword"></span>
        <input class="form-control" asp-for="LoginPassword" />
    </div>

    <button class="btn btn-info" type="submit">Login!</button>
    
</form>